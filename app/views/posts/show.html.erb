<p style="color: green"><%= notice %></p>

<div class="container">
  <div class="card">
    <div class="card-body">
      <%= render @post %>

      <div class="mt-4">
        <%= link_to "Edit this post", edit_post_path(@post), class: "btn btn-warning me-2" %>
        <%= link_to "Back to posts", posts_path, class: "btn btn-secondary me-2" %>

        <%= button_to "Destroy this post", @post, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
